# Production Environment Configuration

# ================================
# CORE APPLICATION SETTINGS
# ================================
NODE_ENV=production
PORT=3000
API_PORT=5000

# Application metadata
APP_NAME="LISA AI Assistant"
APP_VERSION=1.0.0
APP_DOMAIN=your-domain.com

# ================================
# DATABASE CONFIGURATION
# ================================
# Primary PostgreSQL Database (Production)
DATABASE_URL="postgresql://username:password@host:5432/lisa_production"

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ================================
# AUTHENTICATION & SECURITY
# ================================
# JWT Configuration
JWT_SECRET=your_super_secure_256_bit_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15  # minutes

# ================================
# AI SERVICES
# ================================
# Google Gemini AI
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# Rate Limiting for AI API
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000
AI_RATE_LIMIT_PER_DAY=10000

# ================================
# FIREBASE (SOCIAL AUTHENTICATION)
# ================================
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ================================
# EMAIL SERVICES
# ================================
# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Templates
FROM_EMAIL=noreply@your-domain.com
FROM_NAME="LISA AI Assistant"
SUPPORT_EMAIL=support@your-domain.com

# ================================
# FILE STORAGE & UPLOADS
# ================================
# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
UPLOAD_FOLDER=/app/uploads
TEMP_FOLDER=/app/temp

# Cloud Storage (Optional - AWS S3/Google Cloud)
# CLOUD_STORAGE_PROVIDER=aws
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=lisa-ai-uploads
# AWS_REGION=us-east-1

# ================================
# RATE LIMITING & SECURITY
# ================================
# General API Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Specific Endpoint Limits
AUTH_RATE_LIMIT=5  # per 15 minutes
UPLOAD_RATE_LIMIT=10  # per 15 minutes
AI_CHAT_RATE_LIMIT=30  # per 15 minutes

# Security Headers
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# ================================
# MONITORING & LOGGING
# ================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error Tracking (Sentry, LogRocket, etc.)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# Performance Monitoring
APM_ENABLED=true
APM_SERVICE_NAME=lisa-ai-assistant
APM_ENVIRONMENT=production

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# ================================
# CACHING & PERFORMANCE
# ================================
# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600  # 1 hour

# Cache Settings
CACHE_ENABLED=true
CACHE_STATIC_FILES=true
CACHE_MAX_AGE=86400  # 24 hours

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_URL=https://cdn.your-domain.com

# ================================
# FEATURE FLAGS
# ================================
# Feature Toggles
ENABLE_SOCIAL_AUTH=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_PWA=false

# Experimental Features
ENABLE_VOICE_INPUT=false
ENABLE_PLUGINS=false
ENABLE_COLLABORATION=true

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Analytics (Google Analytics, Mixpanel, etc.)
GA_TRACKING_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=123456789012

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=8080
WS_MAX_CONNECTIONS=1000

# ================================
# BACKUP & DISASTER RECOVERY
# ================================
# Backup Configuration
BACKUP_STORAGE_TYPE=local  # local, s3, gcs
BACKUP_PATH=/app/backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Disaster Recovery
DR_ENABLED=false
DR_REPLICA_URL=postgresql://replica-host:5432/lisa_replica

# ================================
# COMPLIANCE & PRIVACY
# ================================
# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
ALLOW_DATA_EXPORT=true
ALLOW_DATA_DELETION=true

# Cookie Configuration
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
COOKIE_MAX_AGE=86400000  # 24 hours

# ================================
# DEVELOPMENT & DEBUGGING
# ================================
# Debug Settings (REMOVE IN PRODUCTION)
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER_DOCS=false
ENABLE_GRAPHQL_PLAYGROUND=false

# ================================
# DEPLOYMENT METADATA
# ================================
DEPLOY_VERSION=1.0.0
DEPLOY_TIMESTAMP=2025-09-24T00:00:00Z
DEPLOY_COMMIT_SHA=abc123def456
BUILD_NUMBER=1