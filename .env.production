# Production Environment Configuration for LISA AI Assistant

# ========================
# Required Environment Variables
# ========================

# AI Configuration
GEMINI_API_KEY=your_production_gemini_api_key_here

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_for_production_use_256_bit_key
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_different_from_jwt

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/lisa_production

# Firebase Configuration (Production)
REACT_APP_FIREBASE_API_KEY=your_production_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_production_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-production-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_production_sender_id
REACT_APP_FIREBASE_APP_ID=your_production_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_production_measurement_id

# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURE_COOKIES=true
HTTPS_REDIRECT=true

# Rate Limiting (Production Settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/lisa.log

# Session Configuration
SESSION_SECRET=your_session_secret_for_cookie_encryption

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# ========================
# Optional Configurations
# ========================

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# External API Keys (for future integrations)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
SLACK_BOT_TOKEN=your_slack_bot_token

# ========================
# Health Check & Monitoring
# ========================
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# ========================
# Deployment Notes
# ========================
# 1. Never commit this file with real values to version control
# 2. Use your deployment platform's secret management system
# 3. Rotate secrets regularly
# 4. Use strong, unique secrets for each environment
# 5. Monitor for unauthorized access attempts